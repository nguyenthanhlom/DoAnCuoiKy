        <!-- Modal --dang nhap -->
        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header border-bottom-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-title text-center">
                            <h4 style="color:#649EFF">Đăng nhập</h4>
                        </div>
                        <div class="d-flex flex-column text-center">
                            <form method="POST" action="/login">
                                <div class="form-group">
                                    <input type="email" class="form-control" id="email1" name="email1" placeholder="Email/Username...">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="password1" name="password1" placeholder=" Mật khẩu...">
                                </div>
                                <input type="submit" class="btn btn-info btn-block btn-round" value="Đăng nhập"style="background-color: #649EFF;color:white">
                            </form>
                        </div>
                    </div>
                    
                    <div class="modal-footer d-flex flex-column">
                       
                        <a href="/change-password">Quên mật khẩu?</a>
                        <div class="signup-section">Bạn chưa có tài khoản? <a href="/register" class="text-info">Đăng ký</a></div>
