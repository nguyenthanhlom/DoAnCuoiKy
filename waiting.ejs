    <div class="main-w3layouts wrapper" style="min-height: 500px!important;">
        <h1>Danh sách thành viên chờ duyệt!</h1>
        <% if (listuser.length) {%>
        <% listuser.forEach((value)=>{%>
        <table class="table container text-center">
            <thead>
                <tr>
                    <th>Số cmnd</th>
                    <th>Họ tên</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row"><%= value.cmnd%></td>
                    <td><%= value.name%></td>
                    <td><a href="/admin/profile/<%= value.id%>" class="btn btn-success p-4">Chi tiết</a></td>
                </tr>
            </tbody>
        </table>
        <%})%>
        <%} else{%>
        <h1 class="text-center">Không có user nào chờ duyệt!</h1>
